<!-- views/foods/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Food</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Edit Food Item</h1>

    <form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=PUT" method="POST">
        <label for="name">Food Name:</label>
        <input type="text" id="name" name="name" value="<%= food.name %>" required>
        
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" value="<%= food.quantity %>" min="1">
        
        <button type="submit">Update Food</button>
    </form>
    <a href="/users/<%= user._id %>/foods">Cancel</a>
</body>
</html>